{
  "compilerOptions": {
    /* base options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* stritness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* transpile options */
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    /* DOM types */
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    
  }
}
